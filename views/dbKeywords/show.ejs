<% include ../partials/header.ejs %>

    
    <div class="container container-fluid">
        <h1>Specific Keyword </h1>
        <form class="row form-horizontal" action="/dbKeywords" method="POST">
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <input class="form-control" type="search" placeholder="Type a keyword to search"></input>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        
        <label>
            <h2>The Keyword "<%=keyword%>"</h2>
            <h3>History Data</h3>
        </label>
        <table class="table">
            <tr>
                <th>date</th>
                <th>traffic</th>
                <th>diffciutly</th>
                <th>competition</th>
            </tr>
            <% historyData.forEach(function(specDate){ %>
            <% //If will be needed in the future, this how I set the date previously: ------ var date = specDate.date.getDate() + "/" + (specDate.date.getMonth()+1) + "/" + specDate.date.getFullYear(); %>
                <tr>
                    <td><%=new Date(specDate.date).toLocaleDateString()%></td>
                    <td><%=specDate.traffic%></td>
                    <td><%=specDate.difficulty%></td>
                    <td><%=specDate.competition%></td>
                </tr>
                    
            <% }); %>
        </table>
        
    </div>
    

	
<% include ../partials/footer.ejs %>