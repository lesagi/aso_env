<% include ../partials/header.ejs %>
    
    <div class="container container-fluid">
        <h1>Specific Keyword</h1>
        <form class="row form-horizontal" action="/dbKeywords" method="POST">
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <input class="form-control" type="search" name="term" placeholder="Type a keyword to search"></input>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        
        <h1>Keywords</h1>
        <label for="resultAmount">Amount of results on page: </label>
        <select name="resultAmount" onchange="location = this.value;" style:"inline">
            <option value="<%=paginate.href({ limit: 100})%>">10</option>
            <option value="<%=paginate.href({ limit: 20})%>">20</option>
            <option value="<%=paginate.href({ limit: 50})%>">50</option>
            <option value="<%=paginate.href({ limit: 100})%>">100</option>
        </select>
        <a href="<%=paginate.href({ sort: keyword })%>">sort by keywords</a>
        <ul>
            <% keywords.forEach(function(keyword){ %>
                <li><%=keyword.keyword%></li>
            <% }); %>
        </ul>
    </div>
    

<% include _paginate %>
<% include ../partials/footer.ejs %>