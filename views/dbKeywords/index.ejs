<% include ../partials/header.ejs %>

    
    <div class="container container-fluid">
        <h1>Specific Keyword</h1>
        <form class="row form-horizontal" action="/dbKeywords" method="POST">
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <input class="form-control" type="search" name="term" placeholder="Type a keyword to search"></input>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        <ul>
            <% allKeywords.forEach(function(keyword){ %>
            <div class="row">
                 <li>
                     <span class="col-lg-10">
                         <a href="/dbKeywords/<%=keyword._id%>"><%=keyword.keyword%></a>
                     </span>
                    <span class="col-lg-2">
                         <form class="delete-form pull-right" action="/dbKeywords/<%=keyword._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                    </span>
                   
                </li>
            </div>
               
            <% }); %>
        </ul>
        
    </div>
    

	
<% include ../partials/footer.ejs %>