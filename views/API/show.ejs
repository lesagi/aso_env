<% include ../partials/header.ejs %>
    
    
    <div class="container container-fluid">
        <h1>API Link Creator</h1>
        <form action="/apiCreator" method="POST">
            <ol>
                
                <!--OS FIELDS-->
                <li>
                    <label> OS: </label>
                    <div class="row">
                        <div class="col-lg-12">
                            <select id="osdl" name="app[os]" class="btn btn-default dropdown-toggle" onchange="configureDropDownLists(this,document.getElementById('andl'))" placeholder="<%=os%>">
                            	<option value="iOS">iOS</option>
                            	<option value="Android">Android</option>
                        	</select>
                        </div>
                    </div>
                </li>
                <!--OS FIELDS-->
                
                <li>
                    <label> App Name: </label>
                    <!--APP NAME FIELDS-->
                    <div class="row">
                        <div class="col-lg-12">
                            <select id="andl" name="app[name]" class="btn btn-default dropdown-toggle">
                                <option value="<%=appName%>"><%=appName%></option>
                            </select>
                        </div>
                    </div>
                    <!--APP NAME FIELDS-->
                </li>
                
                <li>
                    <label> Country: </label>
                    <!--COUNTRY FIELDS-->
                    <div class="row">
                        <div class="col-lg-12">
                            <select id="countryField" name="app[country]" class="btn btn-default dropdown-toggle" placeholder="<%=country%>">
                              <option value="BR">BR</option>
                              <option value="DE">DE</option>
                              <option value="FR">FR</option>
                              <option value="GB">GB</option>
                              <option value="US">US</option>
                            </select>
                        </div>
                    </div>
                    <!--COUNTRY FIELDS-->
                </li>
            </ol>
            
            <input class="btn btn-success" id="extract" type="submit"  value="Submit">
        </form>
        
        <!--Put the link on the page-->
        <label>API Link</label>
        <div class="row">
            <input type="text" class="col-lg-12 col-xs-12 well" disabled
                value="https://api.mobileaction.co/keywords/<%=appId%>/<%=country%>?token=569512200f09f200010000124d9c738b39f94bfe6c86c9baa313ca28">
            </input>
        </div>
        
    </div>
	<script type="text/javascript" src="/scripts/apiCreator.js"></script>
	
	
<% include ../partials/footer.ejs %>