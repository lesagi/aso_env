    <div class="container container-fluid">
        <h1>Phrase Builder</h1>
        <form class="row" action="/phraseBuilder" method="POST">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            	<label>Title:</label>
            	<textarea class="form-control" name="title" placeholder="Enter your text here..." rows="1"></textarea>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            	<label>Subtitle:</label>
            	<textarea class="form-control" name="subtitle" placeholder="Enter your text here..." rows="1"></textarea>
            </div>
            <!--<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">-->
            <!--	<textarea class="form-control" name="description" placeholder="Enter your text here..." rows="5"></textarea>-->
            <!--</div>-->
            
            <input class="btn btn-success" id="extract" type="submit"  value="Submit">
        </form>
    </div>
    
    <div class="container container-fluid">
    	<div class="row">
    		<div class="col-lg-6">
    				<table class="table table-bordered table-hover">
			    		<!--<span id="copyAllBtn" class="pull-right btn btn-primary btn-sm" onclick="copyTable()">Copy All</span>-->
				    	<tr class="row">
						    <th class="col-xs-6">Title</th>
						</tr>
						<% for(var i=0; i<titleArr.length; i++){ %>
							<% if(titleArr[i].length>1){ %>
								<tr class="row">
						    	    <td class="col-xs-12">
						    	        <%= titleArr[i] %>
						    	    </td>
						    	</tr>
							<% } %>
						<% } %>
			    	</table>
    		</div>
    		
    		<div class="col-lg-6">
    			<table class="table table-bordered table-hover">
			    	<tr class="row">
					    <th class="col-xs-6">Subtitle</th>
					</tr>
					<% for(var i=0; i<subTitleArr.length; i++){ %>
						<% if(subTitleArr[i].length>1){ %>
							<tr class="row">
					    	    <td class="col-xs-12">
					    	        <%= subTitleArr[i] %>
					    	    </td>
					    	</tr>
						<% } %>
					<% } %>
		    	</table>
    		</div>
    	</div>
    
    	
    	
    </div>
	
