<% include ../partials/header.ejs %>

    
    <form class="container container-fluid" action="/phrasesCounter" method="POST">
    	<h1>Phrases Counter</h1>
		<div class="row">
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				<textarea class="form-control" name="keywordsList" placeholder="List of Keywords" rows="10"><%=undelimitedList%></textarea>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
				<textarea class="form-control" name="fullDescription" placeholder="Description" rows="10"><%=desc%></textarea>
			</div>
		</div>	
		<input class="btn btn-success" type="submit" value="Submit">
	</form>
	
    <div class="container container-fluid">
    	<table class="table table-bordered">
	    	<tr class="row">
			    <th class="col-xs-6">Keyword</th>
			    <th class="col-xs-6">Apearences</th>
			</tr>
			<% for(var i=0; i<Object.keys(keyList).length; i++){ %>
		    	<tr class="row">
		    	    <td class="col-xs-6">
		    	        <%= Object.keys(keyList)[i] %>
		    	    </td>
		    	    <td class="col-xs-6">
		    	        <%= keyList[Object.keys(keyList)[i]] %>
		    	    </td>
		    	</tr>
			<% } %>
    	</table>
    </div>
    
    
	

<% include ../partials/footer.ejs %>