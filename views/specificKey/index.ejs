<% include ../partials/header.ejs %>

    
    <div class="container container-fluid">
        <h1>Specific Keyword</h1>
        <form class="row form-horizontal" action="/specificKey" method="POST">
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <input class="form-control" type="search" name="term" placeholder="Type a keyword to search"></input>
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                     <button type="submit" class="btn btn-primary">Search</button>
                </div>
            </div>
        </form>
        <ul>
            <% allKeywords.forEach(function(keyword){ %>
                <li><a href="/specificKey/<%=keyword._id%>"><%=keyword.term%></a></li>
            <% }); %>
        </ul>
        
    </div>
    

	
<% include ../partials/footer.ejs %>