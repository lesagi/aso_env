
<% if ((paginate.currentPage!==1 || paginate.currentPage!==paginate.totalPages) && paginate.totalPages != 0) { %>
  <div id="pagination" class="navigation well-sm">
    <ul class="pager">
        <% if (paginate.currentPage>1){ %>
            <li class="previous">
                <a href="?page=1&limit=<%=paginate.perPage%>" class="prev">
                    <i class="i glyphicon glyphicon-step-backward"></i>
                </a>
            </li>
            <li class="previous">
                <a href="?page=<%=paginate.currentPage-1%>&limit=<%=paginate.perPage%>" class="prev">
                    <i class="i fa fa-arrow-circle-left"></i> | Previous
                </a>
            </li>
        <% } else {%>
                <li class="previous">
                    <span class="prev disabled-buttons" disabled>
                        <i class="i glyphicon glyphicon-step-backward"></i>
                    </span>
                </li>
                <li class="previous">
                    <span class="prev disabled-buttons">
                        <i class="i fa fa-arrow-circle-left"></i> | Previous
                    </span >
                </li>
        <% } %>
        
        <% if (paginate.paginatedPages !== undefined){ %>
          <% (paginate.paginatedPages).forEach(function(page){ %>
              <a class="btn btn-default" href="?page=<%=page%>&limit=<%=paginate.perPage%>"><%=page%></a>
          <% }); %>
        <% } %>
      <% if (paginate.currentPage<paginate.totalPages){ %>
          <li class="next">
              <a href="?page=<%=paginate.totalPages%>&limit=<%=paginate.perPage%>" class="next">
                  <i class="i glyphicon glyphicon-step-forward"></i>
              </a>
          </li>
          <li class="next">
              <a href="?page=<%=paginate.currentPage+1%>&limit=<%=paginate.perPage%>" class="next">
                   Next&nbsp;| <i class="i fa fa-arrow-circle-right"></i>
                </a>
          </li>
       <%  } else { %>
            <li class="next">
                <span class="disabled-buttons" disabled>
                    <i class="i glyphicon glyphicon-step-forward"></i>
                </span>
            </li>
            <li class="next">
                <span class="disabled-buttons">
                    Next&nbsp;| <i class="i fa fa-arrow-circle-right"></i>
                </span >
            </li>
        <% } %>

    </ul>
  </div>
<% } %>