<% include ../partials/header %>



<div class="container container-fluid">
    <div id="app-header">
        <img class="img-fluid img-thumbnail" src="<%=app.iconUrl%>"></img>
        <h1><%=app.title%></h1>
    </div>
    
    <h2>App Details:</h2>
       <ul>
           <li>Last Modified: #Need to be changed to last version<%=app.lastModified.toLocaleDateString()%></li>
           <li>Version: <%=app.versionString%></li>
       </ul>
      
    <!--show table only if the keywords array is not empty-->
    <% if(app["keywords"].length>0){ %>
    <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>
                        Keywords (<%=app["keywords"].length%>)
                    </th>
                    <th>
                        Traffic
                    </th>
                    <th>
                        Difficulty
                    </th>
                    <th>
                        Competition
                    </th>
                </tr>
            </thead>
            
        
            <tbody>
                <% app["keywords"].forEach(function(keyword,i){ %>
                    <tr>
                        <td>
                            <a href="/dbKeywords/<%=keyword._id%>"><%=keyword.keyword%></a>
                        </td>
                        <td>
                            <!--If in the future I'll decide to use the last cell, this is the way to point at it-->
                            <!--var updatesLen = keyword["updates"].length-->
                            <%= keyword["updates"][0]["traffic"] %>
                        </td>
                        <td>
                            <%= keyword["updates"][0]["difficulty"] %>
                        </td>
                        <td>
                            <%= keyword["updates"][0]["competition"] %>
                            <form class="delete-form pull-right" action="/apps/<%=app._id%>/<%=i%>?_method=DELETE" method="POST">
                                <button class="btn btn-xs btn-danger"><i class="i glyphicon glyphicon-trash"></i></button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    <% } else { %>
        <h3>Sorry, no keywords listed under this app at this moment</h3>
    <% } %>
</div>

<% include ../partials/footer %>